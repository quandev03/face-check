    {
      "name": "Cleanup Old Images",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"days\": 30\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/storage/cleanup",
          "host": ["{{baseUrl}}"],
          "path": ["api", "storage", "cleanup"]
        },
        "description": "Clean up images older than specified days"
      },
      "response": []
    }
  ]
}
