# =============================================================================
# Face Recognition Server Configuration Example
# =============================================================================
# Copy this file to .env and update the values according to your setup
# cp config.env.example .env

# =============================================================================
# Database Configuration
# =============================================================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://postgres:postgres@160.191.245.38:5433/face_attendance

# =============================================================================
# Flask Application Configuration
# =============================================================================
# Environment: development, production, testing
FLASK_ENV=development

# Enable/disable debug mode (True/False)
FLASK_DEBUG=True

# Secret key for session management and security
# IMPORTANT: Change this to a random string in production!
SECRET_KEY=your-super-secret-key-change-this-in-production-12345

# =============================================================================
# File Upload Configuration
# =============================================================================
# Directory to store uploaded files
UPLOAD_FOLDER=uploads

# Maximum file size in bytes (16MB = 16777216 bytes)
MAX_CONTENT_LENGTH=16777216

# =============================================================================
# Face Recognition Configuration
# =============================================================================
# Face recognition tolerance (0.0 - 1.0)
# Lower values = more strict matching
# Higher values = more lenient matching
FACE_RECOGNITION_TOLERANCE=0.6

# Face recognition model name
FACE_MODEL_NAME=face_recognition

# Model version
FACE_MODEL_VERSION=1.0

# Distance metric for face comparison: 'l2' or 'cosine'
DISTANCE_METRIC=l2

# =============================================================================
# Server Configuration
# =============================================================================
# Server host (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
HOST=0.0.0.0

# Server port
PORT=5555

# =============================================================================
# Logging Configuration
# =============================================================================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# =============================================================================
# Security Configuration (Production)
# =============================================================================
# Allowed CORS origins (comma-separated)
# Uncomment and configure for production
# CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,https://your-frontend-domain.com

# =============================================================================
# Database Performance Tuning (Optional)
# =============================================================================
# Minimum number of database connections in pool
# DB_POOL_MIN_CONN=1

# Maximum number of database connections in pool
# DB_POOL_MAX_CONN=20

# =============================================================================
# MinIO Configuration
# =============================================================================
# MinIO server endpoint (without http://)
MINIO_ENDPOINT=160.191.245.38:9000

# MinIO credentials
MINIO_ACCESS_KEY=admin
MINIO_SECRET_KEY=Ngoquan@2003

# MinIO bucket name for storing face images
MINIO_BUCKET_NAME=face-images

# MinIO settings
MINIO_SECURE=False
MINIO_REGION=us-east-1

# Image storage settings
STORE_ORIGINAL_IMAGES=True
IMAGE_RETENTION_DAYS=365

# =============================================================================
# Additional Configuration (Optional)
# =============================================================================
# Enable/disable automatic database initialization
# AUTO_INIT_DB=True

# Default timezone
# TIMEZONE=UTC

# Image processing quality (1-100)
# IMAGE_QUALITY=85

# Maximum number of faces to detect per image
# MAX_FACES_PER_IMAGE=1 